---
import { string } from "astro:schema";
import projects from "../../config/projects.json";
import Article1 from "../../components/img/undraw_artist-at-work_yos7.png"
import Article2 from "../../components/img/undraw_exams_d2tf.png"
import Article3 from "../../components/img/undraw_art-museum_pqfw.png"
import Image from "astro/components/Image.astro";
interface Article {
    number:string;
    title:string;
    description:string;
    img: ImageMetadata;
}

---


<h1 class="font-bold text-5xl my-5 text-balance">Projects</h1>
{
projects.map((project) => (
        <div class="flex flex-col mb-2 text-center md:text-left md:flex-row">
            <div class="flex-1 gap-y-3 p-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="text-pretty my-2">{project.descripcion}</p>
                <button class="cursor-pointer bg-indigo-500 px-3 py-2 hover:bg-indigo-400 "> Imprimir </button>
            </div>
            <div class="flex-1">
                <img src={project.image} class="w-72 m-auto" alt="">
            </div>
        </div>
    ))
}

    

