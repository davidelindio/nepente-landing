---
interface NavItem{
    name: string;
    href: string;
}
const navItems: NavItem[] = [
    {name: "Inicio", href:"/"},
    {name: "Servicios", href:"/services"},
    {name: "Portfolio", href:"/portfolio"},
    {name: "Contacto", href:"/about"},
    {name: "Sobre nosotros", href:"/about"},
    {name: "Precios", href:"/services/#works"}
]
interface Props {
    isHorizontal?: boolean;
}
const {isHorizontal = false} = Astro.props
---

 <ul class= {` flex gap-6  ${isHorizontal ? 'flex-row mt-0 hidden  lg:flex' : 'flex-col mt-[88px] w-64 ' }`}>
        {
            navItems.map((item: NavItem) => (
                    <li>
                        <a class="text-lg cursor-pointer hover:text-amber-200" href= {item.href}>{item.name}</a>
                    </li>
            ))
        }
       </ul>